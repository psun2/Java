<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	<display-name>216. UserChat oracle ver</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<!-- 

	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>/</url-pattern>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.css</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>jsp</servlet-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>*.jspx</url-pattern>
	</servlet-mapping>
	
	-->

	<!-- 회원가입 -->
	<servlet>
		<servlet-name>MemberRegisterServlet</servlet-name>
		<servlet-class>member.MemberRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberRegisterServlet</servlet-name>
		<url-pattern>/memberRegister</url-pattern>
	</servlet-mapping>

	<!-- 아이디 중복 확인 -->
	<servlet>
		<servlet-name>MemberRegisterCheckServlet</servlet-name>
		<servlet-class>member.MemberRegisterCheckServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberRegisterCheckServlet</servlet-name>
		<url-pattern>/memberRegisterCheck</url-pattern>
	</servlet-mapping>

	<!-- 채팅 전송(submit) -->
	<servlet>
		<servlet-name>ChatSubmitServlet</servlet-name>
		<servlet-class>chat.ChatSubmitServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChatSubmitServlet</servlet-name>
		<url-pattern>/chatSubmit</url-pattern>
	</servlet-mapping>

	<!-- 로그인 기능 -->
	<servlet>
		<servlet-name>MemberLoginServlet</servlet-name>
		<servlet-class>member.MemberLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberLoginServlet</servlet-name>
		<url-pattern>/memberLogin</url-pattern>
	</servlet-mapping>

	<!-- 채팅목록 불러오는 서블릿 -->
	<servlet>
		<servlet-name>ChatListServlet</servlet-name>
		<servlet-class>chat.ChatListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChatListServlet</servlet-name>
		<url-pattern>/chatList</url-pattern>
	</servlet-mapping>

	<!-- 읽지않은 메시지 setvlet -->
	<servlet>
		<servlet-name>ChatUnreadServlet</servlet-name>
		<servlet-class>chat.ChatUnreadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChatUnreadServlet</servlet-name>
		<url-pattern>/chatUnread</url-pattern>
	</servlet-mapping>

	<!-- 메시지함 view 구성을 위한 메시지 반환 서블릿 -->
	<servlet>
		<servlet-name>ChatBoxServlet</servlet-name>
		<servlet-class>chat.ChatBoxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChatBoxServlet</servlet-name>
		<url-pattern>/chatBox</url-pattern>
	</servlet-mapping>

	<!-- 회원정보 수정 servlet -->
	<servlet>
		<servlet-name>MemberUpdateServlet</servlet-name>
		<servlet-class>member.MemberUpdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberUpdateServlet</servlet-name>
		<url-pattern>/memberUpdate</url-pattern>
	</servlet-mapping>

</web-app>