	<!-- ArrayList 만들기 -->
	<bean id="exams(test)" class="java.util.ArrayList">
	<!-- ArrayList에 add 하기 --> <!-- ArrayList의 생성자에 collection을 넣을 수 있다 즉 ArrayList를 이용가능 -->
		<constructor-arg> <!-- 생성자 -->
			<list> <!-- List : ArrayList -->
				<bean class="spring.di.entity.NewLecExam" p:kor="1" p:eng="1" p:math="75"/>
				<ref bean="exam"/>
			</list>
		</constructor-arg>
	</bean>
	
	<!-- utill Namespaces 이용  ArrayList만들기-->
	<util:list id="exams" list-class="java.util.ArrayList"> <!-- List : ArrayList -->
		<bean class="spring.di.entity.NewLecExam" p:kor="1" p:eng="1" p:math="75"/>
