<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lec.security.domain.DAO">

    <select id="findByUsername"
            parameterType="string"
            resultType="com.lec.security.domain.DTO">
		SELECT 
   			username, password, enabled, authority  
		FROM security_user 
		WHERE username = #{username}
	</select>

    <select id="findByUserDetail"
            parameterType="string"
            resultType="com.lec.security.config.CustomUserDetails">
		SELECT 
   			username, password, enabled, authority  
		FROM security_user 
		WHERE username = #{username}
	</select>

</mapper>